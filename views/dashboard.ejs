<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Kommissionier-App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .feature-card {
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            border-color: #0d6efd;
        }

        .sync-indicator {
            animation: blink 2s infinite;
        }

        @keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
        }

        .quick-access-btn {
            transition: all 0.2s ease;
        }

        .quick-access-btn:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body>
<%- include('partials/navbar') %>

<div class="container mt-4">
    <!-- Flash-Nachrichten -->
    <% if(typeof success_msg !== 'undefined' && success_msg !== '') { %>
        <div class="alert alert-success alert-dismissible fade show">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <% if(typeof error_msg !== 'undefined' && error_msg !== '') { %>
        <div class="alert alert-danger alert-dismissible fade show">
            <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Willkommen Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h2 class="mb-1">
                                <i class="fas fa-tachometer-alt"></i>
                                Willkommen, <%= user.name %>!
                            </h2>
                            <p class="mb-0 lead">
                                Kommissionier- und Warenausgangssystem
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="text-white-50">
                                <%= new Date().toLocaleDateString('de-DE', {
                                    weekday: 'long',
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric'
                                }) %>
                            </div>
                            <div class="h4 mb-0" id="current-time">
                                <%= new Date().toLocaleTimeString('de-DE', {
                                    hour: '2-digit',
                                    minute: '2-digit'
                                }) %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sync-Status wenn Admin -->
    <% if(user.role === 'admin' && syncStats) { %>
        <div class="row mb-4">
            <div class="col-12">
                <div class="card <%= syncStats.isRunning ? 'border-success' : 'border-warning' %>">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h6 class="mb-1">
                                    <i class="fas fa-sync <%= syncStats.isRunning ? 'text-success' : 'text-warning' %>"></i>
                                    Synchronisierungs-Status
                                </h6>
                                <div>
                                    <% if (syncStats.isRunning) { %>
                                        <span class="badge bg-success <%= syncStats.isSyncing ? 'sync-indicator' : '' %>">
                                            <i class="fas fa-check-circle"></i> Aktiv
                                        </span>
                                        <% if (syncStats.isSyncing) { %>
                                            <span class="badge bg-warning ms-2">
                                                <i class="fas fa-spinner fa-spin"></i> Synchronisiert gerade...
                                            </span>
                                        <% } %>
                                        <small class="text-muted ms-2">
                                            Alle <%= syncStats.syncIntervalMinutes %> Minute(n)
                                        </small>
                                    <% } else { %>
                                        <span class="badge bg-warning">
                                            <i class="fas fa-pause-circle"></i> Pausiert
                                        </span>
                                        <small class="text-muted ms-2">
                                            Automatische Synchronisierung ist deaktiviert
                                        </small>
                                    <% } %>
                                </div>
                                <% if (syncStats.lastSyncTime) { %>
                                    <small class="text-muted">
                                        Letzte Synchronisierung: <%= new Date(syncStats.lastSyncTime).toLocaleTimeString('de-DE') %>
                                        <% if (syncStats.successfulSyncs > 0) { %>
                                            | Erfolgsrate: <%= Math.round((syncStats.successfulSyncs / syncStats.totalSyncs) * 100) %>%
                                        <% } %>
                                    </small>
                                <% } %>
                            </div>
                            <div class="col-md-4 text-end">
                                <a href="/settings" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-cog"></i> Verwalten
                                </a>
                                <button class="btn btn-sm btn-primary ms-2" onclick="triggerSync()">
                                    <i class="fas fa-sync"></i> Jetzt synchronisieren
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Statistik-Karten -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card">
                <div class="card-body text-center text-white">
                    <i class="fas fa-clipboard-list fa-2x mb-2"></i>
                    <h5>Neue Auftr√§ge</h5>
                    <div class="h3 mb-0" id="new-orders-count">-</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                <div class="card-body text-center text-white">
                    <i class="fas fa-hourglass-half fa-2x mb-2"></i>
                    <h5>In Bearbeitung</h5>
                    <div class="h3 mb-0" id="progress-orders-count">-</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <div class="card-body text-center text-white">
                    <i class="fas fa-box fa-2x mb-2"></i>
                    <h5>Verpackt</h5>
                    <div class="h3 mb-0" id="packed-orders-count">-</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                <div class="card-body text-center text-white">
                    <i class="fas fa-truck fa-2x mb-2"></i>
                    <h5>Heute versendet</h5>
                    <div class="h3 mb-0" id="shipped-today-count">-</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hauptfunktionen -->
    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm border-0 feature-card">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-search fa-3x text-primary"></i>
                    </div>
                    <h4 class="card-title">Lieferschein suchen</h4>
                    <p class="card-text">
                        Suchen Sie einen Lieferschein nach Nummer oder scannen Sie den Barcode.
                    </p>
                    <a href="/orders/search" class="btn btn-primary btn-lg">
                        <i class="fas fa-search"></i> Zur Suche
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm border-0 feature-card">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-clipboard-list fa-3x text-success"></i>
                    </div>
                    <h4 class="card-title">Aktuelle Auftr√§ge</h4>
                    <p class="card-text">
                        Zeigen Sie alle aktuellen Auftr√§ge und deren Status an.
                    </p>
                    <a href="/orders" class="btn btn-success btn-lg">
                        <i class="fas fa-list"></i> Auftr√§ge anzeigen
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm border-0 feature-card">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-hourglass-half fa-3x text-warning"></i>
                    </div>
                    <h4 class="card-title">In Bearbeitung</h4>
                    <p class="card-text">
                        Zeigen Sie alle Auftr√§ge an, die gerade kommissioniert werden.
                    </p>
                    <a href="/orders?status=in_progress" class="btn btn-warning btn-lg">
                        <i class="fas fa-play"></i> Fortsetzen
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Schnellzugriffe -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h4 class="mb-0"><i class="fas fa-bolt"></i> Schnellzugriffe</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="/orders?status=new" class="btn btn-outline-secondary w-100 quick-access-btn">
                                <i class="fas fa-plus-circle"></i><br>
                                <small>Neue Auftr√§ge</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="/orders?status=packed" class="btn btn-outline-info w-100 quick-access-btn">
                                <i class="fas fa-box"></i><br>
                                <small>Verpackt</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="/orders?status=shipped" class="btn btn-outline-primary w-100 quick-access-btn">
                                <i class="fas fa-truck"></i><br>
                                <small>Versendet</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="/orders?status=completed" class="btn btn-outline-success w-100 quick-access-btn">
                                <i class="fas fa-check-circle"></i><br>
                                <small>Abgeschlossen</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sync-Status f√ºr alle Benutzer (vereinfacht) -->
    <% if(user.role !== 'admin') { %>
        <div class="row mt-4">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h6 class="mb-1">
                                    <i class="fas fa-sync text-primary"></i>
                                    Automatische Synchronisierung mit No Border
                                </h6>
                                <p class="mb-0 text-muted small">
                                    Neue Lieferscheine werden automatisch alle <%= syncStats && syncStats.syncIntervalMinutes ? syncStats.syncIntervalMinutes : 1 %> Minute(n) importiert.
                                </p>
                            </div>
                            <div class="col-md-4 text-end">
                                <% if(syncStats && syncStats.isRunning) { %>
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle"></i> Aktiv
                                    </span>
                                <% } else { %>
                                    <span class="badge bg-warning">
                                        <i class="fas fa-pause-circle"></i> Pausiert
                                    </span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Hilfe und Tipps -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-lightbulb"></i> Tipp des Tages</h6>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <strong>Barcode-Scanner verwenden:</strong>
                        Sie k√∂nnen einen Barcode-Scanner verwenden, um Lieferscheinnummern schnell zu erfassen.
                        Einfach das Eingabefeld fokussieren und den Barcode scannen.
                    </p>
                    <small class="text-muted">
                        <i class="fas fa-keyboard"></i> Tastaturbefehle:
                        <kbd>Strg+F</kbd> f√ºr Schnellsuche,
                        <kbd>Strg+L</kbd> f√ºr Auftragsliste,
                        <kbd>Strg+N</kbd> f√ºr neue Auftr√§ge
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Tastaturbefehle
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey) {
                switch(e.key.toLowerCase()) {
                    case 'f':
                        e.preventDefault();
                        window.location.href = '/orders/search';
                        break;
                    case 'l':
                        e.preventDefault();
                        window.location.href = '/orders';
                        break;
                    case 'n':
                        e.preventDefault();
                        window.location.href = '/orders?status=new';
                        break;
                }
            }
        });

        // Auto-refresh der Uhrzeit
        setInterval(function() {
            const now = new Date();
            const timeElement = document.getElementById('current-time');
            if (timeElement) {
                timeElement.textContent = now.toLocaleTimeString('de-DE', {
                    hour: '2-digit',
                    minute: '2-digit'
                });
            }
        }, 1000);

        // Lade Statistiken
        loadStatistics();

        // Aktualisiere Statistiken alle 30 Sekunden
        setInterval(loadStatistics, 30000);
    });

    // Statistiken laden
    async function loadStatistics() {
        try {
            const response = await fetch('/api/dashboard/stats');
            if (response.ok) {
                const stats = await response.json();

                document.getElementById('new-orders-count').textContent = stats.newOrders || 0;
                document.getElementById('progress-orders-count').textContent = stats.inProgressOrders || 0;
                document.getElementById('packed-orders-count').textContent = stats.packedOrders || 0;
                document.getElementById('shipped-today-count').textContent = stats.shippedToday || 0;
            }
        } catch (error) {
            // Fallback: Zeige Platzhalter
            document.getElementById('new-orders-count').textContent = '-';
            document.getElementById('progress-orders-count').textContent = '-';
            document.getElementById('packed-orders-count').textContent = '-';
            document.getElementById('shipped-today-count').textContent = '-';
        }
    }

    // Manuelle Synchronisierung (nur f√ºr Admins)
    async function triggerSync() {
        const btn = event.target.closest('button');
        const originalText = btn.innerHTML;
        btn.disabled = true;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Synchronisiere...';

        try {
            const response = await fetch('/settings/sync/manual', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();

            if (data.success) {
                showAlert('Synchronisierung gestartet', 'success');
                setTimeout(() => location.reload(), 3000);
            } else {
                showAlert(data.message || 'Fehler bei der Synchronisierung', 'danger');
            }
        } catch (error) {
            showAlert('Fehler bei der Synchronisierung', 'danger');
        } finally {
            btn.disabled = false;
            btn.innerHTML = originalText;
        }
    }

    // Alert anzeigen
    function showAlert(message, type) {
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
        alertDiv.innerHTML = `
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;

        const container = document.querySelector('.container');
        container.insertBefore(alertDiv, container.firstChild);

        setTimeout(() => alertDiv.remove(), 5000);
    }
</script>
</body>
</html>