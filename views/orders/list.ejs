<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Kommissionier-App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<%- include('../partials/navbar') %>

<div class="container mt-4">
    <!-- Flash-Nachrichten -->
    <% if(typeof success_msg !== 'undefined' && success_msg !== '') { %>
        <div class="alert alert-success alert-dismissible fade show">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <% if(typeof error_msg !== 'undefined' && error_msg !== '') { %>
        <div class="alert alert-danger alert-dismissible fade show">
            <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2>Auftr채ge</h2>
            <div>
                <a href="/orders/search" class="btn btn-light me-2">
                    <i class="fas fa-search"></i> Lieferschein suchen
                </a>
                <a href="/orders/sync" class="btn btn-success">
                    <i class="fas fa-sync"></i> Synchronisieren
                </a>
            </div>
        </div>

        <div class="card-body">
            <!-- Filter-Tabs -->
            <ul class="nav nav-tabs mb-4">
                <li class="nav-item">
                    <a class="nav-link <%= activeStatus === 'all' ? 'active' : '' %>" href="/orders">Alle</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= activeStatus === 'new' ? 'active' : '' %>" href="/orders?status=new">Neu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= activeStatus === 'in_progress' ? 'active' : '' %>" href="/orders?status=in_progress">In Bearbeitung</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= activeStatus === 'packed' ? 'active' : '' %>" href="/orders?status=packed">Verpackt</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= activeStatus === 'shipped' ? 'active' : '' %>" href="/orders?status=shipped">Versendet</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= activeStatus === 'completed' ? 'active' : '' %>" href="/orders?status=completed">Abgeschlossen</a>
                </li>
            </ul>

            <!-- Auftragsliste -->
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                    <tr>
                        <th>Lieferschein-Nr.</th>
                        <th>Auftrags-Nr.</th>
                        <th>Kunde</th>
                        <th>Erstellt am</th>
                        <th>Status</th>
                        <th>Zugewiesen an</th>
                        <th>Aktionen</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (orders && orders.length > 0) { %>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td>
                                    <strong><%= order.deliveryNoteNumber %></strong>
                                </td>
                                <td><%= order.orderNumber || '-' %></td>
                                <td>
                                    <% if (order.customer && order.customer.name) { %>
                                        <%= order.customer.name %>
                                        <% if (order.customer.city) { %>
                                            <br><small class="text-muted"><%= order.customer.city %></small>
                                        <% } %>
                                    <% } else { %>
                                        <span class="text-muted">-</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.createdAt) { %>
                                        <%= order.createdAt.toLocaleDateString('de-DE') %>
                                        <br><small class="text-muted"><%= order.createdAt.toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' }) %></small>
                                    <% } else { %>
                                        <span class="text-muted">-</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.status === 'new') { %>
                                        <span class="badge bg-secondary">Neu</span>
                                    <% } else if (order.status === 'in_progress') { %>
                                        <span class="badge bg-warning">In Bearbeitung</span>
                                    <% } else if (order.status === 'packed') { %>
                                        <span class="badge bg-info">Verpackt</span>
                                    <% } else if (order.status === 'shipped') { %>
                                        <span class="badge bg-primary">Versendet</span>
                                    <% } else if (order.status === 'completed') { %>
                                        <span class="badge bg-success">Abgeschlossen</span>
                                    <% } else if (order.status === 'cancelled') { %>
                                        <span class="badge bg-danger">Storniert</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary"><%= order.status %></span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (order.assignedTo && order.assignedTo.name) { %>
                                        <%= order.assignedTo.name %>
                                    <% } else { %>
                                        <span class="text-muted">-</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="/orders/<%= order._id %>" class="btn btn-outline-primary" title="Details anzeigen">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <% if (order.status === 'new') { %>
                                            <a href="/orders/<%= order._id %>" class="btn btn-outline-success" title="Kommissionierung starten">
                                                <i class="fas fa-play"></i>
                                            </a>
                                        <% } else if (order.status === 'in_progress') { %>
                                            <a href="/orders/<%= order._id %>" class="btn btn-outline-warning" title="Kommissionierung fortsetzen">
                                                <i class="fas fa-box-open"></i>
                                            </a>
                                        <% } else if (order.status === 'packed') { %>
                                            <a href="/orders/<%= order._id %>/print" class="btn btn-outline-info" title="Drucken">
                                                <i class="fas fa-print"></i>
                                            </a>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Keine Auftr채ge gefunden</p>
                                <% if (activeStatus !== 'all') { %>
                                    <a href="/orders" class="btn btn-sm btn-primary">Alle Auftr채ge anzeigen</a>
                                <% } else { %>
                                    <a href="/orders/sync" class="btn btn-sm btn-success">
                                        <i class="fas fa-sync"></i> Mit No Border synchronisieren
                                    </a>
                                <% } %>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Zusammenfassung -->
            <% if (orders && orders.length > 0) { %>
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="text-muted">
                            Zeige <%= orders.length %> Auftrag/Auftr채ge
                            <% if (activeStatus && activeStatus !== 'all') { %>
                                mit Status "<%= activeStatus.replace('_', ' ') %>"
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Highlight aktuelle Zeile beim Hover
        const rows = document.querySelectorAll('tbody tr');
        rows.forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.backgroundColor = '#f8f9fa';
            });
            row.addEventListener('mouseleave', function() {
                this.style.backgroundColor = '';
            });
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey || e.metaKey) {
                switch(e.key) {
                    case 'f':
                    case 'F':
                        e.preventDefault();
                        window.location.href = '/orders/search';
                        break;
                    case 'r':
                    case 'R':
                        e.preventDefault();
                        window.location.href = '/orders/sync';
                        break;
                }
            }
        });
    });
</script>
</body>
</html>