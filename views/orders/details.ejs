<script>
    document.addEventListener('DOMContentLoaded', function() {
        const orderId = '<%= order._id %>';
        const orderStatus = '<%= order.status %>';

        // Nur Scanner-Funktionalit√§t aktivieren wenn in_progress
        if (orderStatus !== 'in_progress') {
            return;
        }

        // Scanner-Elemente
        const barcodeInput = document.getElementById('barcode-input');
        const scanModeDisplay = document.getElementById('scan-mode');
        const lastScanInfo = document.getElementById('last-scan-info');
        const lastScanCode = document.getElementById('last-scan-code');
        const lastScanResult = document.getElementById('last-scan-result');
        const progressBar = document.getElementById('progress-bar');
        const progressText = document.getElementById('progress-text');
        const completePickingBtn = document.getElementById('complete-picking');
        const itemsTable = document.getElementById('items-table');

        // Audio-Elemente
        const successSound = document.getElementById('scan-success-sound');
        const errorSound = document.getElementById('scan-error-sound');

        // Scanner-Status
        let isScanning = false;
        let scanBuffer = '';
        let lastInputTime = 0;
        const scanThreshold = 100; // ms zwischen Eingaben f√ºr Scanner-Erkennung

        // Initialisierung
        updateProgress();
        autoFocusInput();

        // Event Listeners
        barcodeInput.addEventListener('keypress', handleKeyPress);
        barcodeInput.addEventListener('input', handleInput);
        barcodeInput.addEventListener('focus', () => {
            barcodeInput.classList.add('scanning-active');
            scanModeDisplay.textContent = 'Scannen aktiv';
            scanModeDisplay.className = 'badge bg-success text-white ms-2';
        });
        barcodeInput.addEventListener('blur', () => {
            barcodeInput.classList.remove('scanning-active');
            scanModeDisplay.textContent = 'Bereit zum Scannen';
            scanModeDisplay.className = 'badge bg-light text-dark ms-2';
        });

        document.getElementById('clear-scan').addEventListener('click', () => {
            barcodeInput.value = '';
            barcodeInput.focus();
        });

        document.getElementById('manual-add').addEventListener('click', handleManualAdd);
        document.getElementById('save-progress').addEventListener('click', saveProgress);
        completePickingBtn.addEventListener('click', completePicking);

        // Manuelle +/- Buttons
        document.querySelectorAll('.manual-pick').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const itemIndex = e.target.closest('button').dataset.itemIndex;
                incrementItem(itemIndex);
            });
        });

        document.querySelectorAll('.manual-remove').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const itemIndex = e.target.closest('button').dataset.itemIndex;
                decrementItem(itemIndex);
            });
        });

        // Funktionen
        function handleKeyPress(e) {
            const currentTime = new Date().getTime();

            // Scanner-Eingabe erkennen
            if (currentTime - lastInputTime > scanThreshold) {
                scanBuffer = '';
                isScanning = true;
            }

            scanBuffer += e.key;
            lastInputTime = currentTime;

            // Enter = Scan abgeschlossen
            if (e.key === 'Enter') {
                e.preventDefault();

                if (isScanning && scanBuffer.length > 3) {
                    // Scanner-Eingabe
                    const scannedCode = scanBuffer.replace('Enter', '').trim();
                    processScan(scannedCode);
                } else {
                    // Manuelle Eingabe
                    const manualCode = barcodeInput.value.trim();
                    if (manualCode) {
                        processScan(manualCode);
                    }
                }

                isScanning = false;
                scanBuffer = '';
                barcodeInput.value = '';
            }
        }

        function handleInput(e) {
            // F√ºr manuelle Eingabe - noch kein automatisches Processing
        }

        function processScan(scannedCode) {
            console.log('Verarbeite Scan:', scannedCode);

            // Finde passenden Artikel
            const matchingRow = findMatchingItem(scannedCode);

            if (matchingRow) {
                const itemIndex = Array.from(itemsTable.querySelectorAll('tbody tr')).indexOf(matchingRow);
                incrementItem(itemIndex);

                showScanResult(scannedCode, `‚úÖ Artikel gefunden und hinzugef√ºgt`, 'success');
                playSound(successSound);
            } else {
                showScanResult(scannedCode, `‚ùå Artikel nicht gefunden`, 'error');
                playSound(errorSound);
            }

            // Input wieder fokussieren
            setTimeout(() => {
                barcodeInput.focus();
            }, 100);
        }

        function findMatchingItem(scannedCode) {
            const rows = itemsTable.querySelectorAll('tbody tr[data-item-id]');

            for (let row of rows) {
                const sku = row.dataset.sku;
                const barcode = row.dataset.barcode;

                // Vergleiche mit verschiedenen Feldern
                if (sku && sku.toLowerCase() === scannedCode.toLowerCase()) {
                    return row;
                }
                if (barcode && barcode.toLowerCase() === scannedCode.toLowerCase()) {
                    return row;
                }

                // Auch teilweise √úbereinstimmungen
                if (sku && scannedCode.includes(sku)) {
                    return row;
                }
                if (barcode && scannedCode.includes(barcode)) {
                    return row;
                }
            }

            return null;
        }

        function incrementItem(itemIndex) {
            const row = itemsTable.querySelectorAll('tbody tr[data-item-id]')[itemIndex];
            if (!row) return;

            const currentPicked = parseInt(row.dataset.picked) || 0;
            const required = parseInt(row.dataset.required) || 0;

            if (currentPicked < required) {
                const newPicked = currentPicked + 1;
                updateItemQuantity(row, newPicked, required);

                // Server Update
                updateItemOnServer(row.dataset.itemId, newPicked);
            }
        }

        function decrementItem(itemIndex) {
            const row = itemsTable.querySelectorAll('tbody tr[data-item-id]')[itemIndex];
            if (!row) return;

            const currentPicked = parseInt(row.dataset.picked) || 0;
            const required = parseInt(row.dataset.required) || 0;

            if (currentPicked > 0) {
                const newPicked = currentPicked - 1;
                updateItemQuantity(row, newPicked, required);

                // Server Update
                updateItemOnServer(row.dataset.itemId, newPicked);
            }
        }

        function updateItemQuantity(row, newPicked, required) {
            // Dataset aktualisieren
            row.dataset.picked = newPicked;

            // UI aktualisieren
            const pickedQtyElement = row.querySelector('.picked-qty');
            const statusBadge = row.querySelector('.status-badge');

            if (pickedQtyElement) {
                pickedQtyElement.textContent = newPicked;
            }

            // Status-Badge aktualisieren
            if (statusBadge) {
                let badgeClass, badgeText;

                if (newPicked >= required) {
                    badgeClass = 'badge bg-success';
                    badgeText = 'Vollst√§ndig';
                    row.className = 'item-completed';
                } else if (newPicked > 0) {
                    badgeClass = 'badge bg-warning';
                    badgeText = 'Teilweise';
                    row.className = 'item-partial';
                } else {
                    badgeClass = 'badge bg-secondary';
                    badgeText = 'Offen';
                    row.className = 'item-pending';
                }

                statusBadge.innerHTML = `<span class="${badgeClass}">${badgeText}</span>`;
            }

            // Fortschritt aktualisieren
            updateProgress();

            // Buttons aktualisieren
            updateActionButtons(row, newPicked);
        }

        function updateActionButtons(row, currentPicked) {
            const actionsCell = row.querySelector('td:last-child');
            if (!actionsCell) return;

            const itemIndex = Array.from(itemsTable.querySelectorAll('tbody tr[data-item-id]')).indexOf(row);

            let buttonsHtml = `
            <button class="btn btn-sm btn-outline-primary manual-pick" data-item-index="${itemIndex}">
                <i class="fas fa-plus"></i>
            </button>
        `;

            if (currentPicked > 0) {
                buttonsHtml += `
                <button class="btn btn-sm btn-outline-danger manual-remove" data-item-index="${itemIndex}">
                    <i class="fas fa-minus"></i>
                </button>
            `;
            }

            actionsCell.innerHTML = buttonsHtml;

            // Event Listeners wieder hinzuf√ºgen
            actionsCell.querySelector('.manual-pick').addEventListener('click', (e) => {
                incrementItem(itemIndex);
            });

            const removeBtn = actionsCell.querySelector('.manual-remove');
            if (removeBtn) {
                removeBtn.addEventListener('click', (e) => {
                    decrementItem(itemIndex);
                });
            }
        }

        function updateProgress() {
            const rows = itemsTable.querySelectorAll('tbody tr[data-item-id]');
            let totalItems = 0;
            let completedItems = 0;
            let totalQuantity = 0;
            let pickedQuantity = 0;

            rows.forEach(row => {
                const required = parseInt(row.dataset.required) || 0;
                const picked = parseInt(row.dataset.picked) || 0;

                totalItems++;
                totalQuantity += required;
                pickedQuantity += picked;

                if (picked >= required && required > 0) {
                    completedItems++;
                }
            });

            const progressPercent = totalQuantity > 0 ? (pickedQuantity / totalQuantity * 100) : 0;

            // Progress Bar aktualisieren
            if (progressBar) {
                progressBar.style.width = progressPercent + '%';
                progressBar.textContent = Math.round(progressPercent) + '%';

                if (progressPercent === 100) {
                    progressBar.classList.remove('progress-bar-striped', 'progress-bar-animated');
                    progressBar.classList.add('bg-success');
                }
            }

            // Progress Text aktualisieren
            if (progressText) {
                progressText.textContent = `${completedItems}/${totalItems} Artikel vollst√§ndig (${pickedQuantity}/${totalQuantity} St√ºck)`;
            }

            // Complete Button aktivieren/deaktivieren
            if (completePickingBtn) {
                completePickingBtn.disabled = progressPercent < 100;

                if (progressPercent === 100) {
                    completePickingBtn.classList.remove('btn-success');
                    completePickingBtn.classList.add('btn-success');
                    completePickingBtn.innerHTML = '<i class="fas fa-check-circle"></i> Kommissionierung abschlie√üen';
                }
            }
        }

        function showScanResult(code, message, type) {
            lastScanCode.textContent = code;
            lastScanResult.textContent = message;
            lastScanResult.className = type === 'success' ? 'text-success' : 'text-danger';
            lastScanInfo.style.display = 'block';

            // Nach 3 Sekunden ausblenden
            setTimeout(() => {
                lastScanInfo.style.display = 'none';
            }, 3000);
        }

        function playSound(audioElement) {
            try {
                audioElement.currentTime = 0;
                audioElement.play().catch(e => console.log('Audio konnte nicht abgespielt werden:', e));
            } catch (e) {
                // Ignore audio errors
            }
        }

        function autoFocusInput() {
            if (barcodeInput) {
                barcodeInput.focus();

                // Regelm√§√üig Focus zur√ºcksetzen
                setInterval(() => {
                    if (document.activeElement !== barcodeInput) {
                        barcodeInput.focus();
                    }
                }, 2000);
            }
        }

        function handleManualAdd() {
            const code = prompt('Barcode oder Artikelnummer eingeben:');
            if (code) {
                processScan(code.trim());
            }
        }

        async function updateItemOnServer(itemId, newQuantity) {
            try {
                const response = await fetch(`/orders/${orderId}/items/${itemId}/pick`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        quantityPicked: newQuantity
                    })
                });

                if (!response.ok) {
                    console.error('Fehler beim Server-Update');
                }
            } catch (error) {
                console.error('Fehler beim Server-Update:', error);
            }
        }

        async function saveProgress() {
            try {
                const response = await fetch(`/orders/${orderId}/save-progress`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                if (response.ok) {
                    showScanResult('', 'üíæ Fortschritt gespeichert', 'success');
                } else {
                    showScanResult('', '‚ùå Fehler beim Speichern', 'error');
                }
            } catch (error) {
                console.error('Fehler beim Speichern:', error);
                showScanResult('', '‚ùå Fehler beim Speichern', 'error');
            }
        }

        async function completePicking() {
            if (!confirm('Sind Sie sicher, dass die Kommissionierung abgeschlossen ist?')) {
                return;
            }

            try {
                const response = await fetch(`/orders/${orderId}/complete-picking`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                if (response.ok) {
                    // Weiterleitung zur Druck-Seite
                    window.location.href = `/orders/${orderId}/print`;
                } else {
                    alert('Fehler beim Abschlie√üen der Kommissionierung');
                }
            } catch (error) {
                console.error('Fehler beim Abschlie√üen:', error);
                alert('Fehler beim Abschlie√üen der Kommissionierung');
            }
        }
    });
</script>