</nav>

<div class="container mt-4">
    <!-- Flash-Nachrichten -->
    <% if(typeof success_msg !== 'undefined' && success_msg !== '') { %>
        <div class="alert alert-success alert-dismissible fade show">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <% if(typeof error_msg !== 'undefined' && error_msg !== '') { %>
        <div class="alert alert-danger alert-dismissible fade show">
            <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Progress Summary (Sticky) -->
    <% if (order.status === 'in_progress') { %>
        <div class="progress-summary">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="mb-0">
                                <i class="fas fa-barcode"></i> Kommissionierung: <%= order.deliveryNoteNumber %>
                            </h5>
                            <div id="progress-text">Fortschritt wird berechnet...</div>
                        </div>
                        <div class="col-md-4">
                            <div class="progress" style="height: 25px;">
                                <div id="progress-bar" class="progress-bar progress-bar-striped progress-bar-animated"
                                     role="progressbar" style="width: 0%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2>Lieferschein: <%= order.deliveryNoteNumber %></h2>
            <div>
                <% if (order.status === 'new') { %>
                    <span class="badge bg-secondary">Neu</span>
                <% } else if (order.status === 'in_progress') { %>
                    <span class="badge bg-warning">In Bearbeitung</span>
                <% } else if (order.status === 'packed') { %>
                    <span class="badge bg-info">Verpackt</span>
                <% } else if (order.status === 'shipped') { %>
                    <span class="badge bg-primary">Versendet</span>
                <% } else if (order.status === 'completed') { %>
                    <span class="badge bg-success">Abgeschlossen</span>
                <% } %>
            </div>
        </div>

        <div class="card-body">
            <!-- Barcode Scanner (nur bei in_progress) -->
            <% if (order.status === 'in_progress') { %>
                <div class="card bg-light mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-barcode"></i> Barcode Scanner
                            <span class="badge bg-light text-dark ms-2" id="scan-mode">Bereit zum Scannen</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <label for="barcode-input" class="form-label">Barcode scannen oder eingeben:</label>
                                <input type="text"
                                       id="barcode-input"
                                       class="form-control scan-input"
                                       placeholder="Barcode hier scannen..."
                                       autofocus>
                                <small class="text-muted">
                                    Fokus muss im Eingabefeld sein. Scanner sendet automatisch Enter nach dem Scannen.
                                </small>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Aktionen:</label><br>
                                <button id="clear-scan" class="btn btn-outline-secondary btn-sm me-2">
                                    <i class="fas fa-eraser"></i> Leeren
                                </button>
                                <button id="manual-add" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-plus"></i> Manuell hinzuf√ºgen
                                </button>
                            </div>
                        </div>

                        <!-- Letzter Scan Anzeige -->
                        <div id="last-scan-info" class="mt-3" style="display: none;">
                            <div class="alert alert-info">
                                <strong>Letzter Scan:</strong> <span id="last-scan-code"></span>
                                <span id="last-scan-result"></span>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Basis-Informationen (kompakter bei in_progress) -->
            <% if (order.status !== 'in_progress') { %>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h4>Allgemeine Informationen</h4>
                        <table class="table table-striped table-sm">
                            <tbody>
                            <tr>
                                <th style="width: 40%">Lieferschein-Nr.:</th>
                                <td><%= order.deliveryNoteNumber %></td>
                            </tr>
                            <% if (order.orderNumber) { %>
                                <tr>
                                    <th>Auftrags-Nr.:</th>
                                    <td><%= order.orderNumber %></td>
                                </tr>
                            <% } %>
                            <tr>
                                <th>Status:</th>
                                <td>
                                    <% if (order.status === 'new') { %>
                                        <span class="badge bg-secondary">Neu</span>
                                    <% } else if (order.status === 'in_progress') { %>
                                        <span class="badge bg-warning">In Bearbeitung</span>
                                    <% } else if (order.status === 'packed') { %>
                                        <span class="badge bg-info">Verpackt</span>
                                    <% } else if (order.status === 'shipped') { %>
                                        <span class="badge bg-primary">Versendet</span>
                                    <% } else if (order.status === 'completed') { %>
                                        <span class="badge bg-success">Abgeschlossen</span>
                                    <% } %>
                                </td>
                            </tr>
                            <tr>
                                <th>Erstellt am:</th>
                                <td><%= order.createdAt ? order.createdAt.toLocaleDateString('de-DE') : 'Nicht verf√ºgbar' %></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="col-md-6">
                        <h4>Kundeninformationen</h4>
                        <div class="card">
                            <div class="card-body">
                                <% if (order.customer && order.customer.name) { %>
                                    <p class="mb-1"><strong><%= order.customer.name %></strong></p>
                                    <% if (order.customer.street) { %><p class="mb-1"><%= order.customer.street %></p><% } %>
                                    <% if (order.customer.zip || order.customer.city) { %>
                                        <p class="mb-0"><%= order.customer.zip || '' %> <%= order.customer.city || '' %></p>
                                    <% } %>
                                <% } else { %>
                                    <p>Keine Kundeninformationen verf√ºgbar</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Artikelliste mit Scan-Funktionalit√§t -->
            <h4 class="mt-4">
                Artikel
                <% if (order.status === 'in_progress') { %>
                    <small class="text-muted">(Scannen Sie die Barcodes zum Kommissionieren)</small>
                <% } %>
            </h4>
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="items-table">
                    <thead class="table-light">
                    <tr>
                        <th>Pos</th>
                        <th>Artikelnr.</th>
                        <th>Beschreibung</th>
                        <th>Soll</th>
                        <% if (order.status === 'in_progress') { %>
                            <th>Ist</th>
                            <th>Status</th>
                            <th>Aktionen</th>
                        <% } else { %>
                            <th>Einheit</th>
                            <th>Preis</th>
                            <th>Status</th>
                        <% } %>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (order.items && order.items.length > 0) { %>
                        <% order.items.forEach((item, index) => { %>
                            <tr id="item-row-<%= index %>"
                                data-item-id="<%= item.id %>"
                                data-sku="<%= item.sku || item.articleNumber %>"
                                data-barcode="<%= item.barcode || item.ean || item.sku || item.articleNumber %>"
                                data-required="<%= item.quantity %>"
                                data-picked="<%= item.quantityPicked || 0 %>"
                                class="<%= (item.quantityPicked >= item.quantity) ? 'item-completed' : (item.quantityPicked > 0) ? 'item-partial' : 'item-pending' %>">

                                <td><%= item.position || index + 1 %></td>

                                <td>
                                    <strong><%= item.articleNumber || item.sku || '-' %></strong>
                                    <% if (item.barcode || item.ean) { %>
                                        <br><small class="text-muted">BC: <%= item.barcode || item.ean %></small>
                                    <% } %>
                                </td>

                                <td>
                                    <strong><%= item.description || item.productName || '-' %></strong>
                                    <% if (item.comment) { %>
                                        <br><small class="text-muted"><%= item.comment %></small>
                                    <% } %>
                                </td>

                                <td class="required-qty"><%= item.quantity || 0 %></td>

                                <% if (order.status === 'in_progress') { %>
                                    <td>
                                        <span class="picked-qty badge bg-secondary"><%= item.quantityPicked || 0 %></span>
                                    </td>
                                    <td>
                                        <span class="status-badge">
                                            <% if (item.quantityPicked >= item.quantity) { %>
                                                <span class="badge bg-success">Vollst√§ndig</span>
                                            <% } else if (item.quantityPicked > 0) { %>
                                                <span class="badge bg-warning">Teilweise</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Offen</span>
                                            <% } %>
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary manual-pick"
                                                data-item-index="<%= index %>">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                        <% if (item.quantityPicked > 0) { %>
                                            <button class="btn btn-sm btn-outline-danger manual-remove"
                                                    data-item-index="<%= index %>">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                        <% } %>
                                    </td>
                                <% } else { %>
                                    <td><%= item.unit || 'Stk' %></td>
                                    <td>
                                        <% if (item.price) { %>
                                            <%= Number(item.price).toFixed(2) %> <%= item.currency || 'EUR' %>
                                        <% } else { %>
                                            -
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (item.quantityPicked >= item.quantity) { %>
                                            <span class="badge bg-success">Kommissioniert</span>
                                        <% } else if (item.quantityPicked > 0) { %>
                                            <span class="badge bg-warning">Teilweise</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">Offen</span>
                                        <% } %>
                                    </td>
                                <% } %>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="<%= order.status === 'in_progress' ? '7' : '6' %>" class="text-center">
                                Keine Artikel vorhanden
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Aktionsbuttons -->
            <div class="row mt-4">
                <div class="col-12">
                    <% if (order.status === 'new') { %>
                        <!-- Verpackungsmethode ausw√§hlen -->
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">Verpackungsmethode w√§hlen</h5>
                            </div>
                            <div class="card-body">
                                <form action="/orders/<%= order._id %>/packaging" method="POST">
                                    <div class="row">
                                        <div class="col-md-3 mb-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="packagingMethod" id="method-package" value="package" checked>
                                                <label class="form-check-label" for="method-package">
                                                    <i class="fas fa-box"></i> Paket (Einzelversand)
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="packagingMethod" id="method-pallet" value="pallet">
                                                <label class="form-check-label" for="method-pallet">
                                                    <i class="fas fa-pallet"></i> Palette
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="packagingMethod" id="method-homogeneous" value="homogeneous">
                                                <label class="form-check-label" for="method-homogeneous">
                                                    <i class="fas fa-layer-group"></i> Sortenrein
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="packagingMethod" id="method-mixed" value="mixed">
                                                <label class="form-check-label" for="method-mixed">
                                                    <i class="fas fa-boxes"></i> Gemischt
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-play"></i> Kommissionierung starten
                                    </button>
                                </form>
                            </div>
                        </div>

                    <% } else if (order.status === 'in_progress') { %>
                        <!-- Kommissionierung-Aktionen -->
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <button id="complete-picking" class="btn btn-success btn-lg" disabled>
                                    <i class="fas fa-check-circle"></i> Kommissionierung abschlie√üen
                                </button>
                                <small class="text-muted d-block mt-1">
                                    Alle Artikel m√ºssen vollst√§ndig kommissioniert sein
                                </small>
                            </div>

                            <div>
                                <button id="save-progress" class="btn btn-outline-primary me-2">
                                    <i class="fas fa-save"></i> Fortschritt speichern
                                </button>
                                <a href="/orders" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left"></i> Zur√ºck zur Liste
                                </a>
                            </div>
                        </div>

                    <% } else if (order.status === 'packed') { %>
                        <!-- Weitergeleitet zu Druck-Seite -->
                        <div class="text-center">
                            <h4 class="text-success mb-4">
                                <i class="fas fa-check-circle"></i> Kommissionierung abgeschlossen!
                            </h4>
                            <a href="/orders/<%= order._id %>/print" class="btn btn-primary btn-lg">
                                <i class="fas fa-print"></i> Zu den Druckoptionen
                            </a>
                        </div>

                    <% } else { %>
                        <!-- Standard-Aktionen -->
                        <div class="d-flex justify-content-between">
                            <a href="/orders" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Zur√ºck zur Liste
                            </a>

                            <div>
                                <% if (order.status === 'packed') { %>
                                    <a href="/orders/<%= order._id %>/print" class="btn btn-info me-2">
                                        <i class="fas fa-print"></i> Drucken
                                    </a>
                                <% } %>

                                <% if (order.status !== 'completed') { %>
                                    <form action="/orders/<%= order._id %>/complete" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-success"
                                                onclick="return confirm('Sind Sie sicher, dass Sie diesen Auftrag abschlie√üen m√∂chten?');">
                                            <i class="fas fa-check-circle"></i> Auftrag abschlie√üen
                                        </button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

